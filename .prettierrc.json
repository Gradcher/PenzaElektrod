{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 100,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "overrides": [
        {
            "files": ["*.js"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.scss"],
            "options": {
                "singleQuote": false
            }
        }
    ]
}
